{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "varbitconfig",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#config"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line",
                    "match": "(//).*\\n?"
                },
                {
                    "name": "comment.block",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "config": {
            "patterns": [
                {
                    "comment": "[name]",
                    "name": "entity.name.function.varbitconfig",
                    "match": "\\[\\w+\\]"
                },
                {
                    "comment": "Numeric values",
                    "name": "constant.numeric.varbitconfig",
                    "match": "\\b\\d+\\b"
                },
                {
                    "comment": "Boolean values, part of property",
                    "name": "variable.language.varbitconfig",
                    "match": "\\b(?<==)(yes|no|true|false)\\b"
                },
                {
                    "comment": "Constants",
                    "name": "constant.language.varbitconfig",
                    "match": "\\b\\^\\w+\\b"
                },
                {
                    "comment": "Config properties",
                    "name": "entity.name.type.objconfig",
                    "match": "^(startbit|endbit)(?==)"
                },
                {
                    "comment": "Base varp value",
                    "match": "^(basevar)=(.+)",
                    "captures": {
                        "1": {
                            "name": "entity.name.type.varbitconfig.key"
                        },
                        "2": {
                            "name": "variable.name.varbitconfig.value"
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.varbitconfig"
}